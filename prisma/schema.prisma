generator client {
  provider = "prisma-client"
  output   = "../src/infrastructure/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["auth_service"]
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  name      String
  role      Role
  createdAt DateTime
  updatedAt DateTime

  @@schema("auth_service")
}

enum Role {
  SHELTER
  ADOPTER

  @@schema("auth_service")
}
